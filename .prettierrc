{
  "printWidth": 100,
  "singleQuote": true,
  "arrowParens": "avoid",
  "trailingComma": "none",
  "overrides": [
    {
      "files": [
        "*.json",
        ".prettierrc"
      ],
      "options": {
        "parser": "json-stringify"
      }
    },
    {
      "files": [
        "*.css",
        "*.less",
        "*.scss"
      ],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
